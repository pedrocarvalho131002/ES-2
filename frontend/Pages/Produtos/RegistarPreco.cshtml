@page
@model RegistarPrecoModel
@{
    ViewData["Title"] = "Registar Produto e Preço";
}

<h2>Registar Produto e Preço</h2>

<form method="post">
    <div>
        <label>Nome do Produto:</label>
        <input asp-for="Produto.Nome" />
    </div>

    <div>
        <label>Marca:</label>
        <input asp-for="Produto.Marca" />
    </div>

    <div>
        <label>Descrição:</label>
        <input asp-for="Produto.Descricao" />
    </div>

    <div>
        <label>Categoria:</label>
        <select asp-for="Produto.CategoriaId" asp-items="Model.Categorias"></select>
    </div>

    <div>
        <label>Loja:</label>
        <select asp-for="LojaId" asp-items="Model.Lojas"></select>
    </div>

    <div>
        <label>Preço:</label>
        <input asp-for="Preco" type="number" step="0.01" />
    </div>

    <button type="submit">Registar</button>
</form>
